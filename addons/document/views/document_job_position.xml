<odoo>
    <record id="view_document_job_position_form" model="ir.ui.view">
        <field name="name">document_job_position_form</field>
        <field name="model">document_job_position</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_document_job_position_tree" model="ir.ui.view">
        <field name="name">document_job_position_tree</field>
        <field name="model">document_job_position</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="action_document_job_position" model="ir.actions.act_window">
        <field name="name">Chức vụ</field>
        <field name="res_model">document_job_position</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
