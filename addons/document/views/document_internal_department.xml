<odoo>
    <record id="view_document_internal_department_form" model="ir.ui.view">
        <field name="name">document_internal_department_form</field>
        <field name="model">document_internal_department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_document_internal_department_tree" model="ir.ui.view">
        <field name="name">document_internal_department_tree</field>
        <field name="model">document_internal_department</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="action_document_internal_department" model="ir.actions.act_window">
        <field name="name">Đơn vị nội bộ</field>
        <field name="res_model">document_internal_department</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
