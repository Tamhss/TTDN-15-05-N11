<odoo>
    <record id="view_document_agency_level_form" model="ir.ui.view">
        <field name="name">document_agency_level_form</field>
        <field name="model">document_agency_level</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_document_agency_level_tree" model="ir.ui.view">
        <field name="name">document_agency_level_tree</field>
        <field name="model">document_agency_level</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="action_document_agency_level" model="ir.actions.act_window">
        <field name="name">Cấp cơ quan</field>
        <field name="res_model">document_agency_level</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
