<odoo>
    <record id="view_document_field_form" model="ir.ui.view">
        <field name="name">document_field_form</field>
        <field name="model">document_field</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="short_name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_document_field_tree" model="ir.ui.view">
        <field name="name">document_field_tree</field>
        <field name="model">document_field</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="short_name"/>
            </tree>
        </field>
    </record>

    <record id="action_document_field" model="ir.actions.act_window">
        <field name="name">Lĩnh vực văn bản</field>
        <field name="res_model">document_field</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
